@model Category
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label>Category Name</label>
            <input type="text" disabled class="form-control" asp-for="Name" />
            
        </div>
        <div class="mb-3">
            <label>Display Order</label>
            <input type="text" disabled class="form-control" asp-for="DisplayOrder" />
            
        </div>
        <button type="submit" class="btn btn-primary" style="width: 150px">Delete</button>
        <a asp-action="Delete" asp-controller="Category" class="btn btn-secondary" style="width: 150px">Back to List</a>
    </div>
</form>
